<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme" android:orientation="vertical"
    android:gravity="bottom">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_alignBottom="@+id/nav_header_imageView"
        android:layout_toEndOf="@+id/nav_header_imageView"
        android:layout_marginStart="20dp" />

    <ImageView android:layout_width="40dp" android:layout_height="50dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/nav_header_imageView"
        android:contentDescription="@string/userProfilePicTag" />

</RelativeLayout>
