<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="roast.app.com.dealbreaker.InitialScreen"
    android:background="#ffffff">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="50dp"
        android:id="@+id/identity"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:textColor="@color/white"
        android:id="@+id/login_button"
        android:background="@drawable/login_button"
        android:layout_below="@+id/editPassword"
        android:layout_alignStart="@+id/register_button"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/register_button"
        android:textColor="@color/white"
        android:background="@drawable/register_button"
        android:id="@+id/register_button"
        android:layout_alignTop="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:ems="10"
        android:id="@+id/editEmail"
        android:layout_marginTop="79dp"
        android:layout_below="@+id/identity"
        android:hint="@string/email_edit"
        android:textColorHint="@color/colorPrimary"
        android:layout_alignStart="@+id/editPassword" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:ems="10"
        android:id="@+id/editPassword"
        android:layout_below="@+id/editEmail"
        android:hint="@string/password_edit"
        android:textColorHint="@color/colorPrimary"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/facebook_login"
        android:textColor="@color/white"
        android:id="@+id/facebook_login"
        android:background="@drawable/com_parse_ui_facebook_login_button_background_selector"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/register_button"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Help"
        android:id="@+id/help_button"
        android:layout_alignTop="@+id/facebook_login"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />


</RelativeLayout>

